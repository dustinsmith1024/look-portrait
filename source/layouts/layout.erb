    <header>
        <div class="brand">
            <h1 class="title">
                <% link_to '/' do %>
                    <%= image_tag 'look-logo.svg', :class=>'logo', :alt=>'Look Portrait' %>
                <% end %>
            </h1>
        </div>
        <nav>
            <ul>
                <li><a <% if data.page.title == 'Look Portrait - Galleries' %>class="active"<% end %> href="index.html">Galleries</a></li>
                <li><a <% if data.page.title == 'Look Portrait - About' %>class="active"<% end %> href="about.html">About</a></li>
                <li><a <% if data.page.title == 'Look Portrait - Resources' %>class="active"<% end %> href="resources.html">Resources</a></li>
                <li><a href="http://danbrouillette.typepad.com" target="_blank">Blog</a></li>
            </ul>
      </nav>
    </header>

    <div class="main-container">
      <%= yield %>
    </div>

    <footer class="wrapper">
        <% link_to '/' do %>
          <%= image_tag 'look-logo.svg', :class=>'footer-logo', :alt=>'Look Portrait' %>
        <% end %>
        <p>Look Portrait | Omaha, NE | 712-420-1234</p>
        <p><%= mail_to 'dan@lookportrait.com' %></p>
    </footer>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.8.2.min.js"><\/script>')</script>

    <%= javascript_include_tag  "all" %>
    <script src="js/plugins.js"></script>
    <script src="js/main.js"></script>

    <script>
        var _gaq=[['_setAccount','UA-XXXXX-X'],['_trackPageview']];
